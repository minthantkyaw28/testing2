---
import Base from "../layouts/Base.astro";

import { Image } from 'astro:assets';
import img1 from "../images/aboutusimg1.png";
import img2 from "../images/aboutusimg2.png";
import ceoimg from "../images/ceoimg.png";
---

<Base>
	<section class="bgImg dark:bg-gray-800 dark:text-gray-100 h-40 w-full">
		<div class="overlay1 w-full"></div>
	</section>

	<section class="bg-white dark:bg-gray-900 mb-8">
		<div class="gap-8 items-center py-8 px-4 mx-auto max-w-screen-xl xl:gap-16 md:grid md:grid-cols-2 sm:py-16 lg:px-6">
			<img class="w-full" src={img1.src} alt="dashboard image">
		
			<div class="mt-4 md:mt-0">
				<h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">Let's create more tools and ideas that brings us together.</h2>
